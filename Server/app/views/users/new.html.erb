<% @page_title = "User Login" %>
<div class = "row">
  <div class="col-md-4">
    <div class = "Sign_Form well">
      <div class = "row">
          <h1>Sign Up</h1>
          <%= form_for(:user, url: part_two_users_path(), method: "get") do |f| %>
            <div class = "row">
              <div class = "col-md-3" style="text-align:right;padding-right:0px;">
                Username: 
              </div>  
              <div class = "col-md-9">
                <%= f.text_field :username %>
              </div>
            </div>
            <div class = "row">
              <div class = "col-md-offset-1 col-md-2" style="text-align:right;padding-right:0px;">
                Email: 
              </div>  
              <div class = "col-md-9">
                <%= f.text_field :email %>
              </div>
            </div>
            <div class = "row">
              <div class = "col-md-3", style="text-align:right;padding-right:0px">
                Password: 
              </div>  
              <div class = "col-md-9">
                <%= f.password_field :password %>
              </div>
            </div>
            <div class = "row">
              <div class = "col-md-3", style="text-align:right;padding-right:0px">
                Confirmation:
              </div>  
              <div class = "col-md-9">
                <%= f.password_field :password_confirmation %>
              </div>
            </div>
            <%= f.submit :Signup %>
          <% end %>
      </div>
    </div>
  </div>
</div>