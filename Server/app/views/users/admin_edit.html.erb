<%= form_for @user do |f| %>
<%= hidden_field_tag "call_location", params[:call_location] %>
  <div class="well well-sm">
    <div class="row">
      <div class="col-md-4">
        <div class="row">
          <div class="col-md-5" style="text-align:right;">
            <b>Username:</b>
          </div>
          <div class="col-md-6">
            <%= f.text_field :username %>
          </div>
        </div>
        <div class="row">
          <div class="col-md-5" style="text-align:right;">
            <b>Email:</b>
          </div>
          <div class="col-md-6">
            <%= f.text_field :email %>
          </div>
        </div>
        <div class="row">
          <div class="col-md-5" style="text-align:right;">
            <b>New Password:</b>
          </div>
          <div class="col-md-6">
            <%= f.password_field :password, value: "" %>
          </div>
        </div>
        <div class="row">
          <div class="col-md-5" style="text-align:right;">
            <b>Confirm Password:</b>
          </div>
          <div class="col-md-6">
            <%= f.password_field :password_confirmation %>
          </div>
        </div>
      </div>
    </div>
    <%= f.submit %>
  </div>
<% end %>