<%= form_for @user, url: update_information_user_path(@user) do |f| %>
<div class="row">
  <div class="col-md-5">
    <div class="panel panel-primary">
      <div class="panel-heading">
         Payment Information
      </div>
      <table class="table">
        <thead>
        </thead>
        <tbody>
          <tr>
            <td width="10%">Name:</td>
            <td><%=f.text_field :name %></td>
          </tr>
          <tr>
            <td>Credit Card:</td>
            <td><%=f.text_field :encrypted_credit_card %></td>
          </tr>
          <tr>
            <td><b>Address:</b></td>
            <td></td>
          </tr>
          <tr>
            <td>Street:</td>
            <td><%=f.text_field :street_address, style: "width:100%" %></td>
          </tr>
          <tr>
            <table class="table">
              <tbody>
                <tr>
                  <td width="8%"></td>
                  <td width="40%">City: <%=f.text_field :city %></td>
                  <td>State: <%=f.text_field :state, maxlength:2 %></td>
                </tr>
              </tbody>
            </table>
          </tr>
          <div class="row">
            <div class="col-md-4">
              Confirm Password:
            </div>
            <div class="col-md-3" style="margin-left:-50px">
              <%= f.password_field :password_confirmation %>
            </div>
          </div>
          <tr>
            <td><%= f.submit %> </td>
          </tr>
        </tbody>
      </table>
  </div>
</div>
  
<% end %>