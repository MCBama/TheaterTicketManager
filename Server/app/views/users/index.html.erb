<div class="row">
	<div class="col-md-8 col-md-offset-2">
		<div class="panel panel-primary">        
			<div class="panel-heading">
				<div class="row">
					<div class="col-md-6">
						Users
					</div>
					<% if @current_user.administrator? %>
						<div class="col-md-6 heading-btn">
							<%=link_to "Create New User", new_user_path(), :class=>"btn btn-default" %>
						</div>
					<% end %>
				</div>
			</div>
			<div class = "list-group">
        <table class="table" style="margin-bottom:0px; vertical-align:center">
          <thead>
          </thead>
					<tbody>
						<% User.all.each do |user| %>
            
							<tr>
								<td>
                  <a href=<%= user_path(user) %> class="list-group-item" ><b><%=user.username%></b></a>
                </td>
                <td width="5%" style="text-align:right; vertical-align:middle"><%=user.account_level%><br><%=user.organization_id%></td>
                <% if @current_user.administrator? %>  
                  <td width="10%" style="text-align:right; vertical-align:middle">
                    <table>
                      <tr><td><%= link_to "Edit", admin_edit_user_path(user), class: "btn btn-primary", style: "width:100%"%></td></tr>
                      <tr><td><%= link_to "Destroy", user_path(user), class: "btn btn-danger", style: "width:100%", method: :delete, data: { confirm: "Are you sure?" } %></td></tr>
                    </table>
                  </td>
                <% end %>
							</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>  
